<button
  type="button"
  class="uk-icon-button"
  uk-icon="info"
  title={{t "caluma.form.info"}}
  {{action (mut showModal) true}}
>
  <span class="uk-hidden">{{t "caluma.form.info"}}</span>
</button>

{{#uk-modal
  visible=showModal
  stack=true
  on-hide=(action (mut showModal) false)
as |modal|}}
  {{#modal.body}}
    {{markdown-to-html text openLinksInNewWindow=true}}
  {{/modal.body}}
{{/uk-modal}}