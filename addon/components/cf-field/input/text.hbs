<input
  type="text"
  class="uk-input {{if @field.isInvalid "uk-form-danger"}} {{if @disabled "uk-disabled"}}"
  name={{@field.pk}}
  id={{@field.pk}}
  value={{@field.answer.value}}
  placeholder={{@field.question.placeholder}}
  readonly={{@disabled}}
  minlength={{@field.question.textMinLength}}
  maxlength={{@field.question.textMaxLength}}
  {{on "input" this.input}}
>