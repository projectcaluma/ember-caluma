<input
  type="number"
  step="0.001"
  class="uk-input {{if @field.isInvalid "uk-form-danger"}} {{if this.isDisabled "uk-disabled"}}"
  readonly={{this.isDisabled}}
  name={{@field.pk}}
  id={{@field.pk}}
  value={{@field.value}}
  min={{@field.question.floatMinValue}}
  max={{@field.question.floatMaxValue}}
  {{on "input" this.onInput}}
>