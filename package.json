{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "yarn lint:js:fix",
    "*.hbs": "yarn lint:hbs:fix",
    "*.{scss,graphql,json,md,yaml}": "prettier --write"
  },
  "devDependencies": {
    "@adfinis-sygroup/eslint-config": "1.4.2",
    "@adfinis-sygroup/semantic-release-config": "3.2.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "babel-eslint": "10.1.0",
    "ember-template-lint": "2.21.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-ember": "10.5.4",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-qunit": "6.2.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.0",
    "semantic-release-monorepo": "7.0.5"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "release": {
    "extends": [
      "@adfinis-sygroup/semantic-release-config",
      "semantic-release-monorepo"
    ]
  }
}
