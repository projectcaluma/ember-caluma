{{! template-lint-disable no-bare-strings }}
<button
  class="uk-button uk-button-default"
  type="button"
  {{on "click" this.load}}
>Load</button>
<button
  class="uk-button uk-button-default"
  type="button"
  {{on "click" this.loadMore}}
>Load more</button>

<h2>getWorkItems</h2>

isLoading:
{{this.workItemQuery.isLoading}}<br />
totalCount:
{{this.workItemQuery.totalCount}}<br />
hasNextPage:
{{this.workItemQuery.hasNextPage}}<br />

<ul class="uk-list uk-list-striped">
  {{#each this.workItemQuery.value as |workItem|}}
    <li>{{workItem.id}} - {{workItem.createdAt}} - {{workItem.status}}</li>
  {{/each}}
</ul>