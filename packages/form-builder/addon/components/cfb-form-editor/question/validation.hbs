<div class="uk-margin">
  {{component @labelComponent}}

  <PowerSelectMultiple
    @selected={{this.selected}}
    @placeholder={{@placeholder}}
    @options={{this.validators}}
    @onChange={{this.updateValidators}}
    @renderInPlace={{true}}
    as |item|
  >
    {{item.name}}
  </PowerSelectMultiple>

  {{component @hintComponent}}
  {{component @errorComponent}}
</div>