<div class="uk-margin">
  <@labelComponent />

  <div class="uk-form-controls">
    <PowerSelectMultiple
      @selected={{this.selected}}
      @placeholder={{@placeholder}}
      @options={{this.validators}}
      @onChange={{this.updateValidators}}
      @renderInPlace={{true}}
      data-test-select-format-validators
      as |item|
    >
      {{item.name}}
    </PowerSelectMultiple>
  </div>

  <@hintComponent />
  <@errorComponent />
</div>