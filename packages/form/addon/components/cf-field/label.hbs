<label class="uk-form-label" for={{@field.pk}} ...attributes>
  <span class="uk-text-bold">
    {{@field.question.raw.label}}
  </span>

  {{#unless @field.question.isCalculated}}
    {{#if (and @field.optional (not @useMandatoryAsterisk))}}
      <span
        class="uk-margin-small-left uk-text-muted uk-text-lowercase uk-text-normal"
      >({{t "caluma.form.optional"}})</span>
    {{else if (and (not @field.optional) @useMandatoryAsterisk)}}
      <span
        title={{t "caluma.form.mandatory"}}
        class="uk-text-muted uk-text-lowercase uk-text-normal mandatory-asterisk"
      >* </span>
    {{/if}}
  {{/unless}}

  {{yield}}
</label>