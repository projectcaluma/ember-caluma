<div class="uk-hidden">
  {{yield}}
</div>
<div class="uk-form-controls">
  {{#each @field.options as |option i|}}
    {{#if (and (gt i 0) (not @field.raw.question.meta.vertical))}}<br />{{/if}}
    <label
      class="{{if @field.isInvalid 'uk-form-danger'}}
        {{if @field.raw.question.meta.vertical 'uk-margin-large-right'}}
        {{if
          (and
            (eq option.slug @field.answer.historicalValue)
            (not (eq option.slug @field.answer.value))
          )
          'diff-from-version'
        }}
        {{if
          (and
            (eq option.slug @field.answer.value)
            (not (eq option.slug @field.answer.historicalValue))
          )
          'diff-to-version'
        }}
        "
    >
      <input
        class="uk-radio uk-margin-small-right"
        type="radio"
        name={{concat @field.pk "-compare"}}
        value={{option.slug}}
        checked={{eq option.slug @field.answer.value}}
        disabled={{true}}
      />
      {{#if (and option.disabled (not @disabled))}}
        <del
          class="uk-text-muted"
          title={{t "caluma.form.optionNotAvailable"}}
        >{{option.label}}</del>
      {{else}}
        {{option.label}}
      {{/if}}
    </label>
  {{/each}}
</div>