<input
  type="number"
  step="0.001"
  class="uk-input
    {{if @field.isInvalid 'uk-form-danger'}}
    {{if this.disabled 'uk-disabled'}}"
  readonly={{this.disabled}}
  name={{@field.pk}}
  id={{@field.pk}}
  value={{@field.value}}
  min={{@field.question.raw.floatMinValue}}
  max={{@field.question.raw.floatMaxValue}}
  {{on "input" this.input}}
/>