{{#if @disabled}}
  <input
    class="uk-input uk-disabled"
    type="text"
    name={{@field.pk}}
    id={{@field.pk}}
    value={{format-date
      @field.answer.value
      day="2-digit"
      month="2-digit"
      year="numeric"
    }}
    readonly
  />
{{else}}
  <input
    class="uk-input"
    type="text"
    name={{@field.pk}}
    id={{@field.pk}}
    {{pikaday
      toString=this.formatDate
      i18n=this.pikadayTranslations
      value=@field.answer.value
      onSelect=this.onChange
    }}
  />
{{/if}}