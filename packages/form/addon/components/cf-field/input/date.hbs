<EmberFlatpickr
  id={{@field.pk}}
  name={{@field.pk}}
  class="uk-input {{if @disabled 'uk-disabled'}}"
  readonly={{@disabled}}
  @disabled={{@disabled}}
  @locale={{this.locale}}
  @date={{or @field.answer.value null}}
  @formatDate={{this.formatDate}}
  @allowInput={{true}}
  @onChange={{this.onChange}}
/>