<input
  type="number"
  step="1"
  class="uk-input
    {{if @field.isInvalid 'uk-form-danger'}}
    {{if @disabled 'uk-disabled'}}"
  name={{@field.pk}}
  id={{@field.pk}}
  value={{@field.answer.value}}
  min={{@field.question.integerMinValue}}
  max={{@field.question.integerMaxValue}}
  placeholder={{@field.question.placeholder}}
  readonly={{@disabled}}
  {{on "input" this.input}}
/>