<table class="uk-table uk-table-divider uk-margin-remove-vertical">
  <thead>
    <tr>
      {{#if @compare}}
        <th></th>
      {{/if}}
      {{#each this.columns as |column|}}
        <th>{{column.label}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each @field.answer.value as |document|}}
      <tr
        class="{{if (this.isDocumentAdded document) 'diff-added'}}
          {{if (this.isDocumentDeleted document) 'diff-removed'}}
          {{if (this.isDocumentModified document) 'diff-modified'}}"
      >
        {{#if @compare}}
          <td>
            {{#if (this.isDocumentAdded document)}}
              <UkIcon
                @icon="plus-circle"
                class="uk-text-success"
                {{uk-tooltip (t "caluma.form.compare.diff.added")}}
              />
            {{else if (this.isDocumentDeleted document)}}
              <UkIcon
                @icon="minus-circle"
                class="uk-text-danger"
                {{uk-tooltip (t "caluma.form.compare.diff.removed")}}
              />
            {{else if (this.isDocumentModified document)}}
              <UkIcon
                @icon="pencil"
                class="uk-text-warning"
                {{uk-tooltip (t "caluma.form.compare.diff.modified")}}
              />
            {{/if}}
          </td>
        {{/if}}
        {{#each this.columns as |column|}}
          <td>
            <CfFieldValue
              @field={{find-by "question.slug" column.slug document.fields}}
            />
          </td>
        {{/each}}
        <td class="uk-table-middle">
          <div class="uk-flex uk-flex-middle uk-flex-right">
            {{#if (includes false (map-by "isValid" document.fields))}}
              <UkIcon
                @icon="warning"
                class="uk-animation-fade uk-text-danger"
              />
            {{/if}}
            {{#if @disabled}}
              <UkButton
                @color="link"
                @onClick={{fn this.edit document}}
                title={{t "caluma.form.view"}}
                class="uk-flex-inline uk-margin-small-left table-controls"
                data-test-edit-row
              >
                <UkIcon @icon="eye" />
                <span hidden>{{t "caluma.form.view"}}</span>
              </UkButton>
            {{else}}
              <UkButton
                @color="link"
                @onClick={{fn this.edit document}}
                title={{t "caluma.form.edit"}}
                class="uk-flex-inline uk-margin-small-left table-controls"
                data-test-edit-row
              >
                <UkIcon @icon="pencil" />
                <span hidden>{{t "caluma.form.edit"}}</span>
              </UkButton>
              <UkButton
                @color="link"
                @onClick={{fn (perform this.delete) document}}
                title={{t "caluma.form.delete"}}
                class="uk-flex-inline uk-margin-small-left table-controls"
                data-test-delete-row
              >
                <UkIcon @icon="trash" />
                <span hidden>{{t "caluma.form.delete"}}</span>
              </UkButton>
            {{/if}}
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
  {{#unless @disabled}}
    <tfoot>
      <tr>
        <td colspan={{add this.columns.length 1}} class="uk-text-center">
          <UkButton
            @color="link"
            @onClick={{perform this.add}}
            title={{t "caluma.form.addRow"}}
            data-test-add-row
          >
            <UkIcon @icon="plus" />
            <span hidden>{{t "caluma.form.addRow"}}</span>
          </UkButton>
        </td>
      </tr>
    </tfoot>
  {{/unless}}
</table>

{{#if this.documentToEdit}}
  <UkModal
    @visible={{this.showAddModal}}
    @onHide={{perform this.close}}
    @bgClose={{false}}
    as |modal|
  >
    <modal.body>
      <CfFormWrapper
        @document={{this.documentToEdit}}
        @fieldset={{object-at 0 this.documentToEdit.fieldsets}}
        @disabled={{@disabled}}
        @context={{@context}}
      />
    </modal.body>

    <modal.footer class="uk-text-right">
      {{#if @disabled}}
        <UkButton
          @label={{t "caluma.form.close"}}
          @color="primary"
          @onClick={{perform this.close}}
          @disabled={{this.close.isRunning}}
          @loading={{this.close.isRunning}}
          data-test-close
        />
      {{else}}
        <UkButton
          @label={{t "caluma.form.cancel"}}
          @onClick={{perform this.close}}
          @disabled={{this.close.isRunning}}
          @loading={{this.close.isRunning}}
          data-test-cancel
        />
        <DocumentValidity
          @document={{this.documentToEdit}}
          as |isValid validate|
        >
          <UkButton
            @label={{t "caluma.form.save"}}
            @color="primary"
            @type="submit"
            @disabled={{or this.save.isRunning (not isValid)}}
            @loading={{this.save.isRunning}}
            @onClick={{fn (perform this.save) validate}}
            data-test-save
          />
        </DocumentValidity>
      {{/if}}
    </modal.footer>
  </UkModal>
{{/if}}