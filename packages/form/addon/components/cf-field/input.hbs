{{#if this.type}}
  {{#let (component (concat "cf-field/input/" this.type)) as |InputComponent|}}
    <div class="uk-form-controls">
      <InputComponent
        @field={{@field}}
        @disabled={{@disabled}}
        @onSave={{@onSave}}
        @context={{@context}}
      />
    </div>
  {{/let}}
{{/if}}