<div class="cf-content-compare">
  {{#if this.loading}}
    <div class="uk-text-center"><UkSpinner @ratio={{2}} /></div>
  {{else if this.document}}
    {{#let
      (hash
        document=this.document
        navigation=(component
          "cf-navigation"
          navigation=this.navigation
          useAsHeading=(or @useAsHeading false)
          headingBaseLevel=(or @headingBaseLevel 1)
          context=@context
          compare=this.document.compare
        )
        pagination=(component "cf-pagination" navigation=this.navigation)
        form=(component
          "cf-form-wrapper"
          document=this.document
          fieldset=this.fieldset
          context=@context
          disabled=@disabled
          onSave=@onSave
        )
      )
      as |content|
    }}
      {{#if (has-block)}}
        {{yield content}}
      {{else if (gt this.document.fieldsets.length 1)}}
        <div uk-grid>
          <div class="uk-width-1-1 uk-width-1-3@m"><content.navigation /></div>
          <div class="uk-width-1-1 uk-width-2-3@m">
            {{yield to="formHeader"}}
            <content.form />
            <hr />
            <content.pagination />
          </div>
        </div>
      {{else}}
        <content.form />
      {{/if}}
    {{/let}}
  {{else}}
    {{yield to="notfound"}}
  {{/if}}
</div>