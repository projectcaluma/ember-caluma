<PowerSelect
  class="uk-margin-bottom"
  @selected={{@selected}}
  @options={{@options}}
  @searchEnabled={{false}}
  @searchField="label"
  @allowClear={{true}}
  @onChange={{@onChange}}
  as |option|
>
  {{#if (eq option.id "current")}}
    {{t "caluma.form.compare.timeline.current"}}
  {{else}}
    {{option.label}}:
    {{format-date option.startDate}}
    {{#if option.endDate}}
      -
      {{format-date option.endDate}}{{/if}}
  {{/if}}
</PowerSelect>