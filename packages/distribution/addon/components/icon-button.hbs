{{#if @route}}
  <LinkTo
    @route={{@route}}
    class={{this.class}}
    uk-icon={{unless @fromSvgJar @icon}}
    ...attributes
  >
    {{#if @fromSvgJar}}{{svg-jar @icon width="20" height="20"}}{{/if}}
  </LinkTo>
{{else}}
  <button
    type="button"
    class={{this.class}}
    uk-icon={{unless @fromSvgJar @icon}}
    ...attributes
    {{on "click" @onClick}}
  >
    {{#if @fromSvgJar}}{{svg-jar @icon width="20" height="20"}}{{/if}}
  </button>
{{/if}}